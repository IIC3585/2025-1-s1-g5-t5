---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar';
import Footer from '../components/footer';
import ProductFiltersVue from '../components/products/ProductFiltersVue.vue';
import CardProduct from '../components/products/cardProduct';
import '../../assets/scss/astro-ecommerce.scss';

// Fetch all products from Content Collections (SSG)
const allProducts = await getCollection('products');
const products = allProducts.map(product => product.data);
const categories = [...new Set(products.map(p => p.category))];
---

<Layout title="Products - E-Store">
  <!-- React Island - Navbar with client:load directive -->
  <Navbar client:load />
  
  <main>
    <!-- Hero Section manteniendo est√©tica actual -->
    <section class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h1 class="font-weight-bolder mb-3">Our Products</h1>
            <p class="lead text-muted">Discover {products.length} amazing products across {categories.length} categories</p>
            <p class="text-muted small">
              <strong>Tech Stack:</strong> Astro SSG + React Islands (Navbar, Products) + Vue Islands (Filters) + Content Collections
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="py-5">
      <div class="container">
        <div class="row">
          <!-- Sidebar con filtros Vue -->
          <div class="col-lg-3">
            <div class="card shadow-sm border-0 mb-4">
              <div class="card-body">
                <!-- Vue Island - Product Filters with client:idle directive -->
                <ProductFiltersVue 
                  client:idle
                  title="Filter Products"
                  products={products}
                />
              </div>
            </div>
          </div>
          
          <!-- Grid de productos -->
          <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h5 class="font-weight-bold">All Products ({products.length})</h5>
              <select class="form-select" style="width: auto;">
                <option>Sort by: Featured</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
                <option>Newest</option>
                <option>Rating</option>
              </select>
            </div>
            
            <div class="row g-4" id="products-grid">
              {products.slice(0, 24).map(product => (
                <div class="col-md-6 col-xl-4">
                  <!-- React Island - Product Card with client:visible directive -->
                  <CardProduct
                    client:visible
                    thumb_src={product.thumb_src}
                    thumb_alt={product.thumb_alt}
                    collection={product.category}
                    title={product.title}
                    price={product.price}
                    rating={product.rating}
                    reviews={product.reviews}
                    productId={product.id}
                    productLink={`/products/${product.id}`}
                  />
                </div>
              ))}
            </div>
            
            <!-- Load More -->
            <div class="text-center mt-5">
              <button class="btn btn-outline-primary btn-lg" onclick="alert('Load more products...')">
                <i class="bi bi-plus-circle me-2"></i>
                Load More Products
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tech Info Section -->
    <section class="py-5 bg-light">
      <div class="container">
        <div class="text-center">
          <h3 class="font-weight-bold mb-4">Built with Islands Architecture</h3>
          <div class="row justify-content-center">
            <div class="col-md-2 col-4 mb-3">
              <div class="text-center p-3">
                <i class="bi bi-lightning-charge-fill text-warning display-4"></i>
                <p class="small mb-0 mt-2 font-weight-bold">Astro SSG</p>
              </div>
            </div>
            <div class="col-md-2 col-4 mb-3">
              <div class="text-center p-3">
                <i class="bi bi-react text-info display-4"></i>
                <p class="small mb-0 mt-2 font-weight-bold">React Islands</p>
              </div>
            </div>
            <div class="col-md-2 col-4 mb-3">
              <div class="text-center p-3">
                <i class="bi bi-chevron-up text-success display-4"></i>
                <p class="small mb-0 mt-2 font-weight-bold">Vue Islands</p>
              </div>
            </div>
            <div class="col-md-2 col-4 mb-3">
              <div class="text-center p-3">
                <i class="bi bi-collection text-primary display-4"></i>
                <p class="small mb-0 mt-2 font-weight-bold">Content Collections</p>
              </div>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col-12">
              <div class="card border-0 bg-white shadow-sm">
                <div class="card-body">
                  <h5 class="font-weight-bold text-primary">üèÜ Project Requirements Fulfilled:</h5>
                  <ul class="list-unstyled mb-0 text-start">
                    <li>‚úÖ <strong>2 Different Frameworks:</strong> React (Navbar, ProductCards) + Vue (Filters, Cart)</li>
                    <li>‚úÖ <strong>Client Directives:</strong> client:load, client:idle, client:visible</li>
                    <li>‚úÖ <strong>Content Collections:</strong> {products.length} products generating 50+ static pages</li>
                    <li>‚úÖ <strong>Islands Architecture:</strong> Interactive components with JavaScript where needed</li>
                    <li>‚úÖ <strong>SSG:</strong> All pages generated at build time</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-3px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
  }
</style>